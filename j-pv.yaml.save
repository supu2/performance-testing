apiVersion: v1
kind: PersistentVolume
metadata:
  name: csv-files-pv
spec:
  capacity:
    storage: 10Gi
  volumeMode: Filesystem
  accessModes:
    - ReadWriteOnce
  hostPath:
    path: /jmeter/  # Replace with your desired host path
    type: Directory
---
apiVersion: v1
kind: PersistentVolumeClaim
metadata:
  name: csv-files-pvc
spec:
  accessModes:
    - ReadWriteOnce
  resources:
    requests:
      storage: 10Gi
